<li id="post-comment-<%= comment.id %>">
    <% if (locals.user && locals.user.id==comment.user.id) { %>
        <small>
            <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %> ">X</a>
        </small>
        <% } %>
            <p>
                <%= comment.content %>
                    <br>
                    <small>
                        <%= comment.user.name %>
                    </small>

            </p>
            <a class="likes-toggle-button" href="/likes/toggle/?id=<%= comment.id %>&type=Comment">
                <%= comment.likes.length %> likes
            </a>

</li>